<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-50">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NotesApp</title>

    <!-- Tailwind ve ikonlar -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>

    <!-- Kendi CSS -->
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body class="h-full">
    <!-- Navbar component -->
    <custom-navbar active='@ViewData["ActiveNav"]'></custom-navbar>

    <!-- Sayfa içeriği -->
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @RenderBody()
    </div>

    <!-- Ortak scriptler -->
    <script src="~/js/script.js"></script>
    <script src="~/js/components/navbar.js"></script>
    <script src="~/js/components/auth-form.js"></script>
    <script src="~/js/components/note-card.js"></script>
    <script>feather.replace();</script>
    @RenderSection("Scripts", required: false)

    <script>
        function logout() {
            localStorage.removeItem('isAuthenticated');
            window.location.href = '/User/Logout'; // backend Logout action
        }
    </script>
    @if (TempData["LoginSuccess"] != null) {
    <script>
        localStorage.setItem('isAuthenticated', 'true');
    </script>
    }
</body>

</html>