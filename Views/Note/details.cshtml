@model Note
@{
ViewData["Title"] = "Note Details";
ViewData["ActiveNav"] = "home";
}

<main class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
        <div>
            <a asp-action="Index" asp-controller="Note"
                class="inline-flex items-center text-sm text-indigo-600 hover:text-indigo-900">
                <i data-feather="arrow-left" class="mr-1"></i> Back to notes
            </a>
            <h1 class="mt-2 text-3xl font-bold text-gray-900">@Model.Title</h1>
            <div class="mt-2 flex items-center text-sm text-gray-500">
                <span>@Model.CreatedAt.ToString("g")</span>
                <span class="mx-2">â€¢</span>
                <span>@Model.UpdatedAt?.ToString("g")</span>
            </div>
        </div>
        <div class="flex space-x-3">
            <a asp-action="Edit" asp-route-id="@Model.NoteId" asp-controller="Note"
                class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50">
                <i data-feather="edit" class="mr-2"></i> Edit
            </a>
            <form asp-action="Delete" asp-route-id="@Model.NoteId" method="post" style="display:inline">
                <button type="submit"
                    class="inline-flex items-center px-3 py-2 text-sm rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700">
                    <i data-feather="trash-2" class="mr-2"></i> Delete
                </button>
            </form>
        </div>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <div class="prose max-w-none">
                <p>@Model.Content</p>
            </div>
        </div>
    </div>
</main>

